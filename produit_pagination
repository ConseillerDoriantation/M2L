<?php
    $messagesParPage=7; //Nous allons afficher x messages par page.
     
    $reqSQL='SELECT COUNT(*) AS total FROM oeuvres';    //Ecriture de la requete SQL
    $retour_total=$connexion->query($reqSQL);           //On récupére le contenu de la requête dans $retour_total
    $donnees_total=$retour_total->fetch();              //On range $retour_total sous la forme d'un tableau.
    $total=$donnees_total['total'];                     //On récupère le total pour le placer dans la variable $total.
     
    //Nous allons maintenant compter le nombre de pages.
    $nombreDePages=ceil($total/$messagesParPage);
     
    if(isset($_GET['page'])) // Si la variable $_GET['page'] existe...
    {
         $pageActuelle=intval($_GET['page']);
     
         if($pageActuelle>$nombreDePages) // Si la valeur de $pageActuelle (le numéro de la page) est plus grande que $nombreDePages...
         {
              $pageActuelle=$nombreDePages;
         }
    }
    else // Sinon
    {
         $pageActuelle=1; // La page actuelle est la n°1    
    }
     
    $premiereEntree=($pageActuelle-1)*$messagesParPage; // On calcul la première entrée à lire 

            
?>
        <!--Affiche les FRAIS-->
        <br />   
        <h3 align="center">Vos frais</h3><br />  
        <?php  

            $query = 'SELECT * FROM lignes_frais ORDER BY DATEFRAIS DESC LIMIT '.$premiereEntree.', '.$messagesParPage.''; 
            $result=$connexion->query($query);        
?>

    <table class="srctable" align="center">   
        <tr class="srctr">
            <th class="thprod">Date Frais</th>
            <th class="thprod">Type Motif</th>
            <th class="thprod">Etat</th>
            <th class="thprod">Modifié</th>
        </tr><br>

        <tr>
    <?php
        while($row=$result->fetch())  
        {  
    ?>  
            <form method="post" action="panier.php?action=add&id=<?php echo $row["id"]; ?>">  
                          
                <td class="tdprod"><strong><?php echo $row['DATEFRAIS'] ?></strong></td>
                <td class="tdprod"><?php echo $row["LIBELLE"]; ?></td> 
                <td class="tdprod"><?php echo $row['ETAT']?></td>
 
                <input type="hidden" name="hidden_date" value="<?php echo $row["DATEFRAIS"]; ?>" /> 
                <input type="hidden" name="hidden_mail" value="<?php echo $row["ADRESSE_MAIL"]; ?>" />  
                <input type="hidden" name="hidden_date" value="<?php echo $row["DATEFRAIS"]; ?>" /> 
                <input type="hidden" name="hidden_date" value="<?php echo $row["LIBELLE"]; ?>" /> 
                <input type="hidden" name="hidden_date" value="<?php echo $row["DATEFRAIS"]; ?>" /> 
                <input type="hidden" name="hidden_date" value="<?php echo $row["DATEFRAIS"]; ?>" /> 

                <td><input type="submit" name="modifier_frais" style="margin-top:5px;" class="btn btn-success" value="Modifier" /> </td> 
        </form>
        </tr>


    <?php  
        }       
        echo '<p align="center">Page : '; //Pour l'affichage, on centre la liste des pages
        for($i=1; $i<=$nombreDePages; $i++) //On fait notre boucle
        {
            //On va faire notre condition
            if($i==$pageActuelle) //Si il s'agit de la page actuelle...
            {
                echo ' [ '.$i.' ] '; 
            } 
            else //Sinon...
            {
                echo ' <a href="produits.php?page='.$i.'">'.$i.'</a> ';
            }
        }
        echo '</p>';            
                    ?>
